<% if !logged_in? %>
    <div class="center jumbotron">
        <h1>LPA</h1>
        
    
    <%= link_to "Cadastro", cadastro_path, class: "btn btn-danger btn-large btn-xlarge" %>
    
    </div>

<% else %>
    <% if current_user.acesso_lab %>
        <div class="center jumbotron_porta">
            
        <h2>Porta de Acesso</h2>
            <%= link_to "Destravar Porta de Entrada", new_entrada_path, class: "btn btn-danger btn-large btn-xlarge" %>
        </div>
    <% else %>
        
        <h1 align="center">Bem vindo,</h1>
        <h1 align="center"><%= current_user.username %></h1>
        <h2 align="center">Você não possui autorização de entrada.</h2>
    <% end %>
<% end %>