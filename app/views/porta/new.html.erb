<h1 align="center">Criar Porta de Entrada</h1>

<%= render 'shared/errors', obj: @porta %>


<div class='row'>
    <div class='col-xs-12'>
    
        <%= form_for(@porta, url: porta_path(@porta), :html => {class: "form-horizontal", role: "form"}) do |f| %>
        
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :local, "Local" %>
            </div>
            
            <div class="col-sm-8">
                <%= f.text_field :local, class: "form-control", placeholder: "Local (ex. LPA, PrÃ©dio 1...)", autofocus: true %>
            </div>
        </div>
        
        <div class="form-group">
            
            <div class="control-label col-sm-2">
                <%= f.label :comodo, "CÃ´modo" %>
            </div>
            
            <div class="col-sm-8">
                <%= f.text_field :comodo, rows: 10, class: "form-control", placeholder: "Comodo da porta (ex. Entrada, Sala...)" %>
            </div>
        
        </div>
        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit "Confirmar", class: 'btn btn-primary btn-lg' %>
            </div>
        </div>
        
        <% end %>
        
        <div class="col-xs-4 col-xs-offset-4">
            [ <%= link_to "Cancelar e retornar", root_path %> ]
        </div>
    
    </div>
</div>