<% if logged_in? and current_user.admin? %>

    <h1 align="center">Lista de Portas de Acesso</h1>
    
    <div align="center">
    
        <% @portas.each do |porta| %>
        
            <ul class="listing">
            
                <div class="row">
                    
                    <div class="well col-md-4 col-md-offset-4">
                        
                        <li class="article-title">
                           Porta de <%= link_to porta.comodo %> no <%= link_to porta.local %>
            
                        <li><%= link_to "Deletar Porta", portum_path(porta), method: :delete,
                            
                            data: { confirm: "Tem certeza que deseja deletar essa porta?" } %></li>
                        
                    </div>
                
                </div>
            
            </ul>
        
        <% end %>
        
    
    </div>
    
<% else %>
 redirect_to root_path
<% end %>