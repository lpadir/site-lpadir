<% if @article.errors.any? %>

    <h2>Não foi possível criar o artigo devido as seguintes erros:</h2>
    
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>

<% end %>

<h1>Create an article</h1>

<%= form_for @article do |f| %>

    <p>
    <%= f.label :titulo %><br/>
    
    <%= f.text_field :titulo %>
    </p>
    
    <p>
    <%= f.label :descricao %><br/>
    
    <%= f.text_area :descricao %>
    </p>
    
    <p>
    <%= f.submit %>
    </p>

<% end %>

<%= link_to "Voltar", articles_path %>