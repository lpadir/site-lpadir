<%= render 'shared/errors', obj: @article %>

<div class='row'>
    <div class='col-xs-12'>
    
        <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :Titulo %>
            </div>
            
            <div class="col-sm-8">
                <%= f.text_field :titulo, class: "form-control", placeholder: "Título", autofocus: true %>
            </div>
        </div>
        
        <div class="form-group">
            
            <div class="control-label col-sm-2">
                <%= f.label :descricao %>
            </div>
            
            <div class="col-sm-8">
                <%= f.text_area :descricao, rows: 10, class: "form-control", placeholder: "Descrição" %>
            </div>
        
        </div>
        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit "Confirmar", class: 'btn btn-primary btn-lg' %>
            </div>
        </div>
        
        <% end %>
        
        <div class="col-xs-4 col-xs-offset-4">
            [ <%= link_to "Cancelar e retornar", articles_path %> ]
        </div>
    
    </div>
</div>