<h2 align="center"><%= @article.titulo %></h2>

<div class="well col-xs-8 col-xs-offset-2">
    
    <%= simple_format(@article.descricao) %>
    
    
    <div class="article-actions">
        
        <% if logged_in? && (current_user == @article.usuario || current_user.admin?) %>
        
        <%= link_to "Editar", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
        
        <%= link_to "Excluir", article_path(@article), method: :delete,
        
        data: { confirm: "VocÃª tem certeza que deseja deletar esse artigo?"},
        
        class: "btn btn-xs btn-danger" %>
        
        <% end %>
        
        <%= link_to "Voltar", articles_path, class: "btn btn-xs btn-success" %>
    
    </div>

</div>

<% if @article.usuario %>
    
    <ul class="listing">
    
        <div class="row center">
        
            <div class="col-md-4 col-md-offset-4">
            
                <li>Criado por:</li>
                
                <li class="article-title"><small>
                    <%= link_to @article.usuario.username, usuario_path(@article.usuario) %>
               </small></li>
            
            </div>
        
        </div>
    
    </ul>

<% end %>