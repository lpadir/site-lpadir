<h1 align="center">Lista de usuários</h1>

<div align="center">
    <%= will_paginate %>

    <% @usuarios.each do |user| %>
    
        <ul class="listing">
        
            <div class="row">
                
                <div class="well col-md-4 col-md-offset-4">
                    
                    <li class="article-title">
                        <%= link_to user.username, usuario_path(user) %>
                    </li>
                    
                    <li><small><%= pluralize(user.articles.count, "artigo") if user.articles %></small></li>
                    
                     <% if logged_in? and current_user.admin? %>

                        <li><%= link_to "Deletar Usuário", usuario_path(user), method: :delete,
                        
                        data: { confirm: "Tem certeza que deseja deletar esse usuário e todos seus artigos?" } %></li>
                    
                    <% end %>
                
                </div>
            
            </div>
        
        </ul>
    
    <% end %>
    
    <%= will_paginate %>

</div>