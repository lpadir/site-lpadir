<%= render 'shared/errors', obj: @usuario %>

<div class='row'>
    
    <div class='col-xs-12'>
    
        <%= form_for(@usuario, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        
            <div class="form-group">
            
                <div class="control-label col-sm-2">
                    <%= f.label :username, "Nome" %>
                </div>
                
                <div class="col-sm-8">
                    <%= f.text_field :username, class: "form-control", placeholder: "Digite seu nome", autofocus: true %>
                </div>
            
            </div>
            
            <div class="form-group">
            
                <div class="control-label col-sm-2">
                    <%= f.label :email, "E-Mail" %>
                </div>
                
                <div class="col-sm-8">
                    <%= f.email_field :email, class: "form-control", placeholder: "Digite seu E-Mail" %>
                </div>
            
            </div>
            
            <div class="form-group">
                
                <div class="control-label col-sm-2">
                    <%= f.label :password, "Senha" %>
                </div>
                
                <div class="col-sm-8">
                    <%= f.password_field :password, class: "form-control", placeholder: "Digite uma senha" %>
                </div>
            
            </div>
            
            <div class="form-group">
            
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit(@usuario.new_record? ? "Cadastrar UsuÃ¡rio" : "Atualizar Conta", class: 'btn btn-primary btn-lg') %>
                </div>
            
            </div>
        
        <% end %>
        
        <div class="col-xs-4 col-xs-offset-4">
            [ <%= link_to "Cancelar e Retornar", articles_path %> ]
        </div>
        
    </div>

</div>